# Griot & Grits Backend - Local Development Environment
# Copy this to gng-backend/.env

# =============================================================================
# Application
# =============================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME=Griot and Grits API
APP_VERSION=0.1.0

# =============================================================================
# MongoDB (Docker container: gng-mongodb)
# =============================================================================
DB_URI=mongodb://admin:gngdevpass12@localhost:27017/
DB_NAME=gngdb
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=1

# =============================================================================
# MinIO Object Storage (Docker container: gng-minio)
# =============================================================================
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
STORAGE_BUCKET=artifacts
STORAGE_REGION=us-east-1
STORAGE_SECURE=false

# =============================================================================
# Globus Archive (disabled for local development)
# =============================================================================
GLOBUS_ENABLED=false
# GLOBUS_ENDPOINT_ID=
# GLOBUS_BASE_PATH=/archive/
# GLOBUS_CLIENT_ID=
# GLOBUS_CLIENT_SECRET=

# =============================================================================
# Processing Pipeline
# =============================================================================
PROCESSING_MODE=sync

# Metadata extraction (uses FFmpeg - enabled by default)
PROCESSING_ENABLE_METADATA_EXTRACTION=true

# Transcription (requires Whisper API - disabled by default)
PROCESSING_ENABLE_TRANSCRIPTION=false
# PROCESSING_TRANSCRIPTION_API_URL=http://localhost:8080

# LLM Enrichment (not implemented yet)
PROCESSING_ENABLE_LLM_ENRICHMENT=false

# Async processing (requires Redis - disabled for local dev)
# PROCESSING_CELERY_BROKER_URL=redis://localhost:6379/0
# PROCESSING_CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# CORS (allow local frontend)
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
