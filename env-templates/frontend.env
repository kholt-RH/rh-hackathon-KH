# Griot & Grits Frontend - Local Development Environment
# Copy this to gng-web/.env.local

# =============================================================================
# Backend API Connection
# =============================================================================
NEXT_PUBLIC_ADMIN_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_ADMIN_API_TIMEOUT=30000

# =============================================================================
# Authentication (disabled for local development)
# =============================================================================
# Disable auth entirely for easier local development
ADMIN_AUTH_DISABLED=true
ADMIN_DEV_BYPASS=true
ADMIN_DEV_TOKEN=dev-token-12345

# For production, you'd configure:
# AUTH_SECRET=<generate with: openssl rand -base64 32>
# GITHUB_CLIENT_ID=<from GitHub OAuth app>
# GITHUB_CLIENT_SECRET=<from GitHub OAuth app>
# ADMIN_ALLOWED_GITHUB_ORG=griot-and-grits
# ADMIN_ALLOWED_EMAILS=
# ADMIN_ALLOWED_GITHUB_LOGINS=

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_ASK_THE_GRIOT=true
FEATURE_GOFUNDME=false

# GoFundMe Integration (disabled for local dev)
# GOFUNDME_CLIENT_ID=
# GOFUNDME_CLIENT_SECRET=
# GOFUNDME_CAMPAIGN_ID=731313
# GOFUNDME_USE_EMBEDDED=false
